    "javascript-time-ago": "^2.0.2",
    "js-sha3": "^0.8.0",
    "katex": "^0.11.1",
    "moment": "^2.24.0",
    "next": "^9.0.6",
    "next-compose-plugins": "^2.2.0",
    "next-redux-wrapper": "^4.0.0",
    "next-transpile-modules": "^2.3.1",
